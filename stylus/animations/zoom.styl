// Zoom animation

// zoomIn

.zoomIn
	opacity 0
	transform none
	&.go
		animation-name zoomIn

@keyframes zoomIn
	0%
		opacity 0
		transform scale(.3)
	20%
		opacity .8
	100%
		opacity 1
		transform scale(1)

// zoomOut
.zoomOut
	opacity 1
	transform none
	&.go
		animation-name zoomOut

@keyframes zoomOut
	0%
		opacity 1
		transform scale(1)
	80%
		opacity .8
	100%
		opacity 0
		transform scale(.3)